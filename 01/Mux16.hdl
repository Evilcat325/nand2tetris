/**
 * 16-bit multiplexor:
 * for i = 0..15 out[i] = a[i] if sel == 0
 *                        b[i] if sel == 1
 */

CHIP Mux16 {
    IN a[16], b[16], sel;
    OUT out[16];

    PARTS:
    // Put your code here:
    Split1to16(in=sel, out=sel16);
    And16(a=sel16, b=b, out=bwhensel);
    Not(in=sel, out=notsel);
    Split1to16(in=notsel, out=notsel16);
    And16(a=notsel16, b=a, out=awhennotsel);
    Or16(a=bwhensel, b=awhennotsel, out=out);
}
